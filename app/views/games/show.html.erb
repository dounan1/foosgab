<h1>It's a game</h1>

<table class="table table-bordered">
  <%= render partial: 'games/table_header' %>

  <tbody>
    <%= render 'game', game: @game %>
  </tbody>
</table>

<%= link_to edit_game_path(@game), class: 'btn' do%><i class="icon icon-pencil"></i> Edit<% end %>
<%= link_to game_path(@game), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } do%><i class="icon icon-white icon-trash"></i> Delete<% end %>
<%= link_to 'Back', games_path, class: 'btn' %>