<h2><%= @player.name %>'s games</h2>

<%= content_tag :p, "#{pluralize(@player.games.count, 'game')}, with #{pluralize(@player.wins, 'win')}, #{pluralize(@player.losses, 'loss')} and #{pluralize(@player.ties, 'tie')}, and an average score of #{@player.average_score}" %>

<table class="table table-bordered">
  <%= render partial: 'games/table_header' %>

  <tbody>
    <%= render partial: 'games/game', collection: @games, locals: { active: @player } %>
  </tbody>
</table>

<%= paginate @games, theme: 'bootstrap' %>

<%= link_to edit_player_path(@player), class: 'btn' do%><i class="icon icon-pencil"></i> Edit<% end %>
<%= link_to player_path(@player), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } do%><i class="icon icon-white icon-trash"></i> Delete<% end %>
<%= link_to 'Back', players_path, class: 'btn' %>