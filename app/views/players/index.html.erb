<ul class="breadcrumb">
  <li><%= link_to 'Foosgab', root_path %> <span class="divider">/</span></li>
  <li class="active">Players</li>
</ul>

<h1>Players</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td><%= link_to player.name, player %></td>
      <td><%= link_to edit_player_path(player), class: 'btn' do %><i class="icon icon-pencil"></i> Edit<% end %></td>
      <td><%= link_to player, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
        <i class="icon icon-white icon-trash"></i> Delete<% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, :player %>
  <%= link_to 'New Player', new_player_path, class: 'btn btn-success' %>
<% end %>